<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h3 class="text-center">Gallery</h3>
      <br>
      <br>
      <% @foods.each do |food| %>
        <div class="col-md-3">
          <center><%= link_to (image_tag food.image_url(:thumb).to_s), food %></center>
          <h3 class="text-center"><%= food.name %></h3>
        </div>
      <% end %>
    </div>
  </div>
</div>
<hr>
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h4 class="text-center">instagram feeds</h4>
      <br>
      <% @instagram.each do |instagram| %>
        <%= image_tag instagram.images.thumbnail.url %>
      <% end %>
    </div>
  </div>
</div>
<hr>



