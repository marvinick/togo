
<div class="container">

  <div class="row">
     <% @foods.each do |food| %>
    <div class="col-md-3">
      <div class="thumbnail">
        <%= link_to (image_tag food.image_url(:thumb).to_s), food %>
        <h3 class="text-center"><%= link_to food.name, food %></h3>
      </div>
    </div>
   <% end %>
    <br/>
    <div class="col-md-12">
      <h4><%= link_to 'New', new_food_path %></h4>
    </div>
  </div>
</div>



