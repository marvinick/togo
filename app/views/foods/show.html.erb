<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h2><%= @food.name %></h2>
      <%= image_tag @food.image_url(:show).to_s %>
    </div>

    <div class="col-md-6">
      <br>
      <br>
      <h2>Description</h2>
      <h4>"<%= @food.content %>"</h4>
      <% if user_signed_in? and (current_user.id == @food.user_id) %>
        <h4><%= link_to "Edit", edit_food_path %> || <%= link_to "Delete", food_path, method: :delete %></h4>
      <% end %>
    </div>
  </div>
  <hr>
  <div class="row">
    <% if user_signed_in? %>
      <div class="col-md-6">
        <%= form_for [@food, @review] do |f| %>
          <div class="control-form">
            <%= f.label :content %>
            <%= f.text_area :content, rows: 6, span: "span6" %>
          </div>
          <br>
          <%= f.submit "Add Review", class: "btn btn-info" %>
        <% end %>
      </div>
    <% end %>
      <% @food.reviews.each do |review| %>
      <div class="col-md-6">
        <em><%= review.content %></em>
      </div>
      <% end %>

  </div>
  <hr>



</div>