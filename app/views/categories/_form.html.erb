<%= simple_form_for @category, :html => {:class=> 'form-signin'} do |f| %>
<%= f.error_notification %>
<h3 class='text-center'>Add Category</h3>
  <%= f.input :name, required: true, autofocus: true, label: false, placeholder: "name", input_html: {class: "form-control"} %>
   <%= f.file_field :photo %>
  <%= f.button :submit, class:'btn btn-success btn-lg btn-block' %>
<% end %>