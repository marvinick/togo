<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h3 class="text-center">Categories</h3>
      <br>
      <br>
      <% @categories.each do |category| %>
        <div class="col-md-4">
          <center><%= link_to (image_tag category.photo_url(:thumb).to_s), category %></center>
          <h4 class="text-center"><%= link_to category.name, category %></h4>
        </div>
      <% end %>
    </div>
    <hr>
    <div class="col-md-12">
      <center>
        <% if user_signed_in? and current_user.admin? %>
          <h4 class="text-center"><%= link_to "New", new_category_path %></h4>
        <% end %>
      </center>
    </div>
  </div>
</div>