<div class="container">
  <div class="row">
    <div class="col-md-4">
      <% @categories.each do |category| %>
      <h4 class="text-center"><%= link_to category.name, category %></h4>
      <% end %>
    </div>
    <% if user_signed_in? %>
      <div class="col-md-6">
        <h4 class="text-center"><%= link_to "New", new_category_path %></h4>
      </div>
    <% end %>
  </div>
</div>